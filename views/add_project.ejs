<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Add Project | Investigo</title>
    <link rel="apple-touch-icon" href="/app-assets/images/favicon/apple-touch-icon-152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="/app-assets/images/logo/favicon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/flag-icon/css/flag-icon.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/materialize.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/style.css">
    <!-- END: Page Level CSS-->
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">
    <%- include('_layouts/sidenavbar') %>

        <!-- BEGIN: Page Main-->
        <div id="main">
            <div class="row">
                <div id="breadcrumbs-wrapper" data-image="/app-assets/images/gallery/breadcrumb-bg.jpg">
                    <div class="container">
                        <div class="row">
                            <div class="col s12 m6 l6">
                                <h5 class="breadcrumbs-title mt-0 mb-0"><span>Add Project</span></h5>
                            </div>
                            <div class="col s12 m6 l6 right-align-md">
                                <ol class="breadcrumbs mb-0">
                                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/admin/project">Project</a></li>
                                    <li class="breadcrumb-item active">Add Project</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12">
                    <div class="container">
                        <div class="section section-data-tables">
                            <div class="row">
                                <div class="col s12">
                                    <div class="card">
                                        <div class="card-content">
                                            <div class="row">
                                                <div class="col s12">
                                                    <!-- <h4 class="card-title">Contact Us</h4> -->
                                                    <!-- errors -->
                                                    <%- messages('messages', locals) %>
                                                        <form method="POST" onsubmit="validate()" action="/admin/project/add" id="form" enctype="multipart/form-data">
                                                            <div class="input-field col m12">
                                                                <input placeholder="Title" id="title" name="title" type="text">
                                                                <small><div id="error1" class="error"></div></small>
                                                                <label for="title">Title</label>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <select id="cat" name="category">
                                                                    <option value="">Select category</option>
                                                                    <option value="Transport">Transport</option>
                                                                    <option value="Agriculture">Agriculture</option>
                                                                    <option value="Real Estate">Real Estate</option>
                                                                    <option value="Mine Extraction">Mine Extraction</option>
                                                                    <option value="Hotel">Hotel</option>
                                                                    <option value="Telecommunication">Telecommunication</option>
                                                                </select>
                                                                <label>Select category</label>
                                                                <small><div id="error2" class="error"></div></small>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <select id="property" name="property">
                                                                    <option value="">Select Property</option>
                                                                    <option value="Commercial">Commercial</option>
                                                                    <option value="Residential">Residential</option>
                                                                </select>
                                                                <label>Select property</label>
                                                                <small><div id="error3" class="error"></div></small>
                                                            </div>
                                                            <div class="input-field col m12">
                                                                <textarea id="description" class="materialize-textarea" name="description" placeholder="Enter content here"></textarea>
                                                                <!-- <input placeholder="Description" id="description" name="description" type="text"> -->
                                                                <small><div id="error4" class="error"></div></small>
                                                                <label for="description">Description</label>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <input placeholder="Total amount" id="totalAmount" name="totalAmount" type="number">
                                                                <small><div id="error5" class="error"></div></small>
                                                                <label for="title">Total amount</label>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <input placeholder="Location" id="location" name="location" type="text">
                                                                <small><div id="error6" class="error"></div></small>
                                                                <label for="location">Location</label>
                                                            </div>
                                                            <!-- hidden lat long -->
                                                            <div class="input-field col s12">
                                                                Upload Image
                                                                <input type="file" name="image" id="input-file-now" class="dropify" data-disable-remove="true" required/>
                                                                <small><div id="error7" class="error"></div></small>
                                                            </div>
                                                            <button type="submit" class="btn purple ml-1">Submit</button>
                                                            <a href="/admin/project" class="btn btn-danger">Cancel</a>
                                                        </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-overlay"></div>
                </div>
            </div>
        </div>
        <!-- END: Page Main-->

        <script>
            const formC = document.getElementById('form');
            const titleC = document.getElementById('title');
            const categoryC = document.getElementById('cat');
            const propertyC = document.getElementById('property');
            const descriptionC = document.getElementById('description');
            const amountC = document.getElementById('totalAmount');
            const locationC = document.getElementById('location');

            formC.addEventListener('submit', (e) => {
                e.preventDefault();
            })
            function validate() {
                let returnVal = true;

                const titleValue = titleC.value.trim();
                const categoryValue = categoryC.value.trim();
                const propertyValue = propertyC.value.trim();
                const descriptionValue = descriptionC.value.trim();
                const amountValue = amountC.value.trim();
                const locationValue = locationC.value.trim();
                const filevalue = document.getElementById('input-file-now').value;
                const ext = filevalue.substring(filevalue.lastIndexOf('.') + 1);

                if (titleValue == '') {
                    document.getElementById('error1').innerText = 'Please enter title.';
                    returnVal = false;
                } else {
                    document.getElementById('error1').innerText = '';
                }

                if (categoryValue == '') {
                    document.getElementById('error2').innerText = 'Please select category.';
                    returnVal = false;
                } else {
                    document.getElementById('error2').innerText = '';
                }

                if (propertyValue == '') {
                    document.getElementById('error3').innerText = 'Please select property type.';
                    returnVal = false;
                } else {
                    document.getElementById('error3').innerText = '';
                }

                if (descriptionValue == '') {
                    document.getElementById('error4').innerText = 'Please enter description.';
                    returnVal = false;
                } else {
                    document.getElementById('error4').innerText = '';
                }

                if (amountValue == '') {
                    document.getElementById('error5').innerText = 'Please enter total amount.';
                    returnVal = false;
                } else {
                    document.getElementById('error5').innerText = '';
                }

                if (locationValue == '') {
                    document.getElementById('error6').innerText = 'Please enter location.';
                    returnVal = false;
                } else {
                    document.getElementById('error6').innerText = '';
                }

                if (ext == 'png' || ext == 'jpeg' || ext == 'jpg') {
                    document.getElementById('error7').innerText = '';
                } else {
                    document.getElementById('error7').innerText = 'Wrong file type.';
                    returnVal = false;
                }

                if (returnVal) {
                    formC.submit();
                }
            }

        </script>
        <!-- BEGIN VENDOR JS-->
        <script src="/app-assets/js/vendors.min.js"></script>
        <!-- BEGIN VENDOR JS-->
        <!-- BEGIN THEME  JS-->
        <script src="/app-assets/js/plugins.js"></script>
        <script src="/app-assets/js/scripts/ui-alerts.js"></script>
        <!-- END THEME  JS-->
        <!-- ===== ckeditor JavaScript ===== -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
        <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>
</body>
<%- include('_layouts/alert') %>
</html>